devbox() {
    arg=($@)
    base='/www/devbox/game/server_';
    echo test1:${base}${arg}
}

sbox() {
    box=$1
    file=$2
    boxPath=`devbox ${box}`
    scp ${file} ${boxPath}/${file}
}
boxs() {
    box=$1
    file=$2
    boxPath=`devbox ${box}`
    scp ${boxPath}/${file} ${file}
}

