
#detect is session a ssh or just not 
if [ -n "$SSH_CLIENT"  ] || [ -n "$SSH_TTY"  ]; then
      SESSION_TYPE=ssh
else
  case $(ps -o comm= -p $PPID) in
      sshd|*/sshd) 
        SESSION_TYPE=ssh
        ;; 
      *)
        SESSION_TYPE=local
      ;;
  esac
fi

#detect os type
OS="`uname`"
case $OS in
  'Linux')
    OS='Linux'
    ;;
  'FreeBSD')
    OS='FreeBSD'
    ;;
  'WindowsNT')
    OS='Windows'
    ;;
  'Darwin') 
    OS='Mac'
    ;;
  'SunOS')
    OS='Solaris'
    ;;
  'AIX') ;;
  *) ;;
esac

